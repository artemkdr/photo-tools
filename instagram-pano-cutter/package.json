{
    "name": "instagram-pano-cutter",
    "version": "1.0.4",
    "type": "module",
    "description": "Cut horizontal photos into Instagram carousel slides",
    "scripts": {
        "dev": "vite --force",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "npx biome format && npx biome lint",
        "lint:fix": "npx biome format --write && npx biome lint --write",
        "typecheck": "npx tsc --noEmit",
        "precommit": "npm run typecheck && npm run lint:fix",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@artemkdr/biome-base": "^0.0.3",
        "@biomejs/biome": "^2.3.8",
        "@testing-library/dom": "^10.4.1",
        "@types/heic-decode": "^1.1.3",
        "@vitest/coverage-v8": "^4.0.15",
        "@vitest/ui": "^4.0.15",
        "happy-dom": "^20.0.11",
        "jsdom": "^27.3.0",
        "typescript": "^5.9.3",
        "vite": "^7.2.7",
        "vite-plugin-pwa": "^1.2.0",
        "vitest": "^4.0.15"
    },
    "dependencies": {
        "heic-decode": "^2.1.0",
        "utif2": "^4.1.0"
    }
}
