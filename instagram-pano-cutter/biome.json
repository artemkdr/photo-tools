{
    "extends": ["@artemkdr/biome-base/base.json"],
    "files": {
        "ignoreUnknown": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "domains": {
            "project": "recommended"
        },
        "rules": {
            "complexity": {
                "useLiteralKeys": "off",
                "noStaticOnlyClass": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    }
}
